;
;   PS0007.PSH: kPS_BLITTER
;
;   t0 - diffuse texture
;   t1 - env map
;   t2 - detail
;   t3 - proj
;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
    
;   tex t0

;==----------------------------------------------------------------------------
;
;   Perform diffuse blend
;
;==----------------------------------------------------------------------------

    mul r0.rgb,t0.rgb,v0.rgb +
    mov r0.a,c0.a

    xfc zero, zero, r0, zero, zero, zero, r0.a
