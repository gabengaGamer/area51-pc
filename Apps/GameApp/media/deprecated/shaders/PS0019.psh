;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;
;   PS0019.PSH: kPS_ALPHA_PER_POLY_ENV_PROJ
;
;   t0 - diffuse texture
;   t1 - env map
;   t2 - detail
;   t3 - proj
;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

;   tex t0
;   tex t1
;   tex t3

;==----------------------------------------------------------------------------
;
;   Blend projective texture
;
;==----------------------------------------------------------------------------

    mul r1.rgb,t0.rgb,v0.rgb +      ; r1.rgb = t0.rgb * v0.rgb
    mul_d2 r1.a,v0.a,t3.b           ; r1.a   = v0.a * t3.b
 
    lrp r0.rgb,r1_sat.a,t0.rgb,r1.rgb

;==----------------------------------------------------------------------------
;
;   Calculate env
;
;==----------------------------------------------------------------------------

    lrp  r1.rgb,c0.a,  t1.rgb,t0.rgb
    mul  r0.rgb,r1.rgb,r0.rgb +
    mov  r0.a,  t0.a
